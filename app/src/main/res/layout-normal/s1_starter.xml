<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluexxl"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/linLay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/s1_slider"
            android:layout_marginTop="70dp"
            android:layout_width="300dp"
            android:layout_height="508dp"
            app:sliderAnimationDuration="400"
            app:sliderAutoCycleDirection="right"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="400"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="2dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="@color/white"
            app:sliderIndicatorUnselectedColor="@color/notimportant"
            app:sliderScrollTimeInSec="4"
            app:sliderStartAutoCycle="true"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/s1_newBtn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/s1_btn_text1"
            android:background="@drawable/s1_btn_v1"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/s1_signInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/s1_signInText"

            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>