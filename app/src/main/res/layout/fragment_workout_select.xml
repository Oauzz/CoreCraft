<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_select_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exercise_background"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/exercise_select_img_card"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp">
        <com.corecraft.ExerciseViewer
            android:id="@+id/exercise_select_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bicep_curl"
            android:background="@color/primary_color_4"
            android:contentDescription="@string/exercise_image" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/exercise_select_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Bicep curls"
            android:textColor="@color/primary_color_1"
            android:textSize="14sp"
            android:fontFamily="@font/carterone_regular"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exercise_select_target"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Arm muscles"
            android:textColor="@color/primary_color_1"
            android:textSize="14sp"
            android:fontFamily="@font/carterone_regular"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>