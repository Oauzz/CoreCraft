<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stats">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general_stats"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/carterone_regular"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/stats_general">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/workouts"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:drawableBottomCompat="@drawable/line" />
                <TextView
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:textSize="20sp"
                    android:textColor="@color/primary_color_1"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/stats_general">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:drawableBottomCompat="@drawable/line" />
                <TextView
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23h 5min"
                    android:textSize="20sp"
                    android:textColor="@color/primary_color_1"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/stats_general">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kcal"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:drawableBottomCompat="@drawable/line" />
                <TextView
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:textSize="20sp"
                    android:textColor="@color/primary_color_1"
                    android:fontFamily="@font/carterone_regular"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stats">
        <TextView
            android:id="@+id/stats_title_2"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_frequency"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/carterone_regular"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/stats_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/stats_title_2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/workout_btn"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_below="@id/stats_title_2"
            android:id="@+id/stats_chart_2"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </RelativeLayout>
</LinearLayout>